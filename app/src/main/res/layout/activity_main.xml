<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdfeaf1">


    <TextView style="@style/TextAppearance.AppCompat.Display1" android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textColor="@color/material_blue_grey_800"
        />
    <Button
        android:layout_width="220dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btnSpotify"
        android:layout_below="@+id/textView"
        android:layout_gravity="center"
        android:elegantTextHeight="true"
        android:layout_marginTop="46dp"
        android:clickable="true"
        android:background="#FFAB40"
        android:onClick="showToastbtnSpotify"/>

    <Button android:id="@+id/btnScores"
        android:layout_width="220dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:layout_gravity="center"
        android:elegantTextHeight="true"
        android:layout_below="@+id/btnSpotify"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:background="#FFAB40"
        android:enabled="true"
        android:onClick="showToastbtnScores"/>

    <Button
        android:layout_width="220dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btnLib"
        android:layout_gravity="center"
        android:layout_below="@+id/btnSpotify"
        android:layout_marginTop="16dp"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:background="#FFAB40"
        android:onClick="showToastbtnLib"/>

    <Button
        android:layout_width="220dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBigger"
        android:layout_gravity="center"
        android:layout_below="@+id/btnLib"
        android:layout_marginTop="16dp"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:background="#FFAB40"
        android:onClick="showToastbtnBigger"/>

    <Button
        android:layout_width="220dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btnXYZ"
        android:layout_gravity="center"
        android:layout_below="@+id/btnBigger"
        android:layout_marginTop="16dp"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:background="#FFAB40"
        android:onClick="showToastbtnXYZ"/>

    <Button
        android:layout_width="220dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btnCap"
        android:layout_gravity="center"
        android:layout_below="@+id/btnXYZ"
        android:layout_marginTop="16dp"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:background="#FFAB40"
        android:onClick="showToastbtnCap"/>

</RelativeLayout>
